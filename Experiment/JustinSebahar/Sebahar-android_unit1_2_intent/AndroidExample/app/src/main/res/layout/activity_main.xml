<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:layout_width="fill_parent"
    android:background="#f7f5f2">

    <TextView
        android:id="@+id/main_msg_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="200dp"
        android:text="Intent Example"
        android:textColor="#f27507"
        android:textSize="30dp">

    </TextView>

    <Button
        android:id="@+id/main_counter_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:text="To the Counter Activity"
        android:textColor="#ffffff"
        android:textSize="20sp">

    </Button>

    <Button
        android:id="@+id/main_random_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:text="To the Random Activity"
        android:textColor="#ffffff"
        android:textSize="20sp">

    </Button>

</androidx.appcompat.widget.LinearLayoutCompat>