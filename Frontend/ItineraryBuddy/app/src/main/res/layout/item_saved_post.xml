<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">


    <!-- Post Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp"
        >

        <!-- Profile Image -->
        <ImageView
            android:id="@+id/image_profile"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_default_pp"
            android:scaleType="centerCrop"/>

        <!-- Username and Time Posted -->

        <!-- More Options Button -->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="username"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/icon_savePost"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:src="@drawable/ic_bookmark_aftr"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <!-- Post File -->
    <TextView
        android:id="@+id/text_post_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Post File Name"
        android:textSize="16sp"
        android:background="@color/dark_green"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:padding="10dp"/>


    <!-- Caption and Comments Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/text_caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Caption"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginBottom="25dp"
            />

    </LinearLayout>

</LinearLayout>