            android:labelFor="@id/id_input2"
            android:textColor="@color/black"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/id_input1" />

        <TextView
            android:id="@+id/enter_user_id2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:labelFor="@id/id_input2"
            android:text="@string/enter_user_id"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/grant_ambassador_status" />

        <Button
            android:id="@+id/confirm2"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="#7a9143"
            android:text="@string/confirm"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/id_input2"
            app:layout_constraintTop_toBottomOf="@+id/enter_user_id2" />

        <Button
            android:id="@+id/confirm6"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="#7a9143"
            android:text="@string/confirm"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/id_input6"
            app:layout_constraintTop_toBottomOf="@+id/enter_user_id6" />

        <EditText
            android:id="@+id/id_input6"
            android:layout_width="186dp"
            android:layout_height="49dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="8dp"
            android:autofillHints="password"
            android:background="@drawable/rounded_edittext"
            android:fontFamily="sans-serif-condensed-medium"
            android:inputType="text"
            android:text=""
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/enter_user_id6"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/enter_user_id6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:labelFor="@id/id_input2"
            android:text="@string/enter_user_id"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/enable_posting" />

        <TextView
            android:id="@+id/enable_posting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:labelFor="@id/id_input6"
            android:text="@string/enable_user_posting"
            android:textColor="@color/black"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
